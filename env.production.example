# ============================================================================
# DentalAI - Production Environment Configuration
# ============================================================================
# این فایل را کپی کنید و به .env تغییر نام دهید
# سپس مقادیر را با اطلاعات واقعی خود تنظیم کنید

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------------------------------------
# فرمت: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE
# 
# ⚠️ مهم: Username و Password را با مقادیر واقعی که در PostgreSQL ایجاد کردید جایگزین کنید
# 
# مثال:
# - اگر username: dentalai_user
# - اگر password: DentalAI2024!Secure
# - Host: localhost (یا IP سرور)
# - Port: 5432
# - Database: dentalai

DATABASE_URL="postgresql://dentalai_user:DentalAI2024!Secure@localhost:5432/dentalai?schema=public"

# ----------------------------------------------------------------------------
# Authentication & Security
# ----------------------------------------------------------------------------
# ⚠️ این secret key را حتماً تغییر دهید!
# برای تولید secret قوی: openssl rand -base64 32

NEXTAUTH_SECRET="dentalai-nextauth-secret-key-REPLACE-WITH-RANDOM-STRING"
NEXTAUTH_URL="https://ceph.bioritalin.ir"

# JWT Secret برای احراز هویت
JWT_SECRET="dentalai-jwt-secret-REPLACE-WITH-RANDOM-STRING"

# Bcrypt rounds برای hash کردن رمز عبور (12 = تعادل خوب بین امنیت و سرعت)
BCRYPT_ROUNDS=12

# ----------------------------------------------------------------------------
# API URLs
# ----------------------------------------------------------------------------
# استفاده از دامنه واقعی برای production
VITE_API_URL="https://ceph.bioritalin.ir"
VITE_AI_API_URL="https://ceph.bioritalin.ir"
NEXT_PUBLIC_API_URL="https://ceph.bioritalin.ir"

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
NODE_ENV="production"
FLASK_ENV="production"
PORT=7272

# ----------------------------------------------------------------------------
# Python AI Server Settings
# ----------------------------------------------------------------------------
PYTHONPATH="/home/salahk"

# CPU Optimization برای AI Server (تعداد threadها = تعداد هسته CPU)
OMP_NUM_THREADS=2
MKL_NUM_THREADS=2
OPENBLAS_NUM_THREADS=2
VECLIB_MAXIMUM_THREADS=2
NUMEXPR_NUM_THREADS=2

# غیرفعال کردن CUDA (استفاده از CPU)
CUDA_VISIBLE_DEVICES=""

# ----------------------------------------------------------------------------
# File Upload Settings
# ----------------------------------------------------------------------------
UPLOAD_DIR="/home/salahk/uploads"
MAX_FILE_SIZE=104857600

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL="INFO"
LOG_DIR="/home/salahk/logs"

